<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/main_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2679"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_modification_password_one_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingBottom="5dp"
            android:paddingLeft="@dimen/text_margin_left"
            android:paddingTop="5dp"
            android:text="请输入新密码与旧密码" />

        <LinearLayout
            android:id="@+id/ll_modification_password_one_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/me_setting_row_selector"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_modification_password_one_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_margin_left"
                android:text="旧密码"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:id="@+id/et_old_password"
                style="@style/style_edittext_bg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_margin_left"
                android:layout_weight="1"
                android:hint="请输入旧密码"
                android:inputType="textPassword" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@drawable/divide_line_thin" />

        <LinearLayout
            android:id="@+id/ll_modification_password_one_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/me_setting_row_selector"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_modification_password_one_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_margin_left"
                android:text="新密码"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:id="@+id/et_new_password"
                style="@style/style_edittext_bg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_margin_left"
                android:layout_weight="1"
                android:inputType="textPassword"
                android:hint="请输入新密码" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@drawable/divide_line_thin" />

        <LinearLayout
            android:id="@+id/ll_modification_password_one_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/me_setting_row_selector"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_modification_password_one_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_margin_left"
                android:text="确认密码"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:id="@+id/et_new_password_more"
                style="@style/style_edittext_bg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_margin_left"
                android:layout_weight="1"
                android:inputType="textPassword"
                android:hint="请再次输入密码" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7321"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_modification_password_one_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="29dp"
            android:background="@drawable/activity_modification_bank_card_one_bt_bg_default"
            android:text="确定" />
    </LinearLayout>

</LinearLayout>