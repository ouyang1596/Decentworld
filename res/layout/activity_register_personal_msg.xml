<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_activity_register_personal_msg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <include layout="@layout/top_register_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingRight="50dp" >

        <cn.sx.decentworld.widget.ClearEditText
            android:id="@+id/etv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/bg_line_press"
            android:gravity="center_horizontal"
            android:hint="请输入您的真实姓名"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/two_black"
            android:textColorHint="@color/three_black"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/new_textsize_13sp" />

        <cn.sx.decentworld.widget.ClearEditText
            android:id="@+id/etv_identify_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/bg_line_press"
            android:gravity="center_horizontal"
            android:hint="请输入您的身份证号码"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/two_black"
            android:textColorHint="@color/three_black"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/new_textsize_13sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp" >

            <Button
                android:id="@+id/btn_OK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_yellow_selector"
                android:padding="10dp"
                android:text="下一步"
                android:textColor="@color/white"
                android:textSize="@dimen/new_textsize_15sp" />
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:text="填写务必真实，DW保障每一个与您交往的精英的安全"
            android:textColor="@color/three_black"
            android:textSize="@dimen/new_textsize_14sp" />
    </LinearLayout>

</LinearLayout>