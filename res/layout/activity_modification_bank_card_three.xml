<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/main_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1208"
        android:orientation="vertical"
        android:padding="5dp" >

        <TextView
            android:id="@+id/tv_modification_bank_card_three_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="@dimen/text_margin_left"
            android:paddingTop="5dp"
            android:text="@string/activity_modification_bank_card_three_number" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1057"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_modification_bank_card_three_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_margin_left"
            android:text="@string/activity_modification_bank_card_three_2"
            android:textSize="@dimen/text_size_16" />

        <EditText
            android:id="@+id/et_modification_bank_card_three_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_margin_left"
            android:layout_weight="1"
            android:inputType="number"
            style="@style/style_edittext_bg"
            android:hint="@string/activity_modification_bank_card_three_code" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7735"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btn_modification_bank_card_three_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="29dp"
                android:background="@drawable/activity_modification_bank_card_one_bt_bg_default"
                android:text="获取验证码"
                />

            <Button
                android:id="@+id/btn_modification_bank_card_three_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="29dp"
                android:background="@drawable/activity_modification_bank_card_one_bt_bg_default"
                android:text="下一步" 
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>