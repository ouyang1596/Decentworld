<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/main_header" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/root_activity_chat_room_data"
         >

        <ScrollView
            
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/im_activity_chat_room_data"
                    android:layout_width="680px"
                    android:layout_height="392px"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="20px"
                    android:src="@drawable/chat_room_topic_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30px"
                    android:singleLine="true"
                    android:text="标题"
                    android:textSize="36px" />

                <LinearLayout
                    android:layout_width="680px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="#9b9b9b"
                    android:orientation="horizontal"
                    android:padding="16px" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.101" >

                        <ImageView
                            android:layout_width="58px"
                            android:layout_height="58px"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_launcher" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="0.899"
                        android:gravity="center_horizontal"
                        android:text="sssssssssssssssssssss1111111111111111111111111111111111111111111111111111111111111111111111111111"
                        android:textColor="@color/chat_find_text_color"
                        android:textSize="26px" />
                </LinearLayout>

                <TextView
                    android:layout_width="680px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="sssssssssssssssssssssssssssssssssssssssssssssss" />

                <RelativeLayout
                    android:layout_width="680px"
                    android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                    android:layout_marginTop="60px">

                    <TextView
                        android:id="@+id/chat_room_chat_t"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/read"
                        android:textSize="30px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/chat_room_chat_t"
                        android:text="1231"
                        android:textSize="30px" />

                    <TextView
                        android:id="@+id/chat_room_discuss_t"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_toLeftOf="@id/chat_room_discuss_t"
                        android:text="12312"
                        android:textSize="30px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/chat_room_discuss_t"
                        android:text="@string/num_onlinechat"
                        android:textSize="30px" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/chat_rooom_detail_bt_join"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_inter_group_bt"
            android:text="@string/join_chat_room"
            android:textColor="@color/white"
            android:textSize="30px" />
    </RelativeLayout>

</LinearLayout>