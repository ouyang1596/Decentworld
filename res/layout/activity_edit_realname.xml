<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/top_edit_userinfo_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/et_edit_realname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_line_press"
            android:enabled="false"
            android:gravity="center_horizontal"
            android:hint="请输入个性签名"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="实名不可更改，如需更改，请跟我们联系"
            android:textColor="@color/three_black"
            android:textSize="@dimen/new_textsize_14sp" />

        <Button
            android:id="@+id/btn_edit_realname_complete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_btn_yellow_selector"
            android:padding="10dp"
            android:text="OK"
            android:textColor="@color/white"
            android:textSize="@dimen/new_textsize_15sp" />
    </LinearLayout>

</LinearLayout>