<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_ll_stranger_near"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/top_near_stranger_title" />

    <cn.sx.decentworld.widget.ScrollLayout
        android:id="@+id/near_stranger_scrollLayout"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1" >

        <!-- 附近的人以卡片显示 -->

        <include layout="@layout/fragment_near_card" />
        <!-- 附近的人以列表显示 -->

        <include layout="@layout/fragment_near_list" />
    </cn.sx.decentworld.widget.ScrollLayout>

</LinearLayout>