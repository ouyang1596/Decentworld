<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_activity_register_is_student"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <include layout="@layout/top_register_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="您将与全球的精英交往，并享受DW为您提供的福利。为了不影响您的尽快体验，我们首先选择信任。请提交真实材料，作假必究！"
        android:textColor="@color/two_black"
        android:textSize="@dimen/new_textsize_16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:weightSum="1" >

        <Button
            android:id="@+id/btn_OK"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="16dp"
            android:layout_weight="0.45"
            android:background="@drawable/bg_btn_yellow_selector"
            android:text="YES"
            android:textColor="@drawable/rg_tv_color_selector"
            android:textSize="@dimen/new_textsize_15sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.1" />

        <Button
            android:id="@+id/btn_NO"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginRight="16dp"
            android:layout_weight="0.45"
            android:background="@drawable/bg_btn_yellow_selector"
            android:text="NO"
            android:textColor="@drawable/rg_tv_color_selector"
            android:textSize="@dimen/new_textsize_15sp" />
    </LinearLayout>

</LinearLayout>