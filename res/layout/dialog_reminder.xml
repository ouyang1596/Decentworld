<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_reminder_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal" >

    <RelativeLayout
        android:layout_width="538px"
        android:layout_height="382px"
        android:background="@drawable/dialog_bg_382" >

        <TextView
            android:id="@+id/tv_reminder_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="60px"
            android:layout_marginRight="60px"
            android:layout_marginTop="100px"
            android:maxLines="3"
            android:text="自定义信息"
            android:textColor="#000000"
            android:textSize="@dimen/text_size_px_30" />

        <Button
            android:id="@+id/bt_reminder_confirm"
            android:layout_width="228px"
            android:layout_height="52px"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="100px"
            android:background="@drawable/button_bg"
            android:text="确认"
            android:textSize="@dimen/text_size_px_30" />

    </RelativeLayout>

</RelativeLayout>