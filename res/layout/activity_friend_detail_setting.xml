<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/main_header" />

    <LinearLayout
        android:id="@+id/ll_friend_detail_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_friend_detail_set_remark"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_row_height"
            android:background="@drawable/me_setting_row_selector"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:text="设置备注"
                android:textSize="@dimen/text_size_px_30" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_friend_detail_set_remark"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_row_height"
            android:layout_marginTop="2px"
            android:background="@drawable/me_setting_row_selector"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_margin_left"
                    android:text="@string/activity_friend_detail_1"
                    android:textSize="@dimen/text_size_px_30" />

                <ImageView
                    android:id="@+id/iv_friend_detail_setting_1"
                    android:layout_width="120px"
                    android:layout_height="54px"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/image_margin_right"
                    android:src="@drawable/switch_rectangle_close" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_friend_detail_set_remark"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_row_height"
            android:layout_marginTop="20px"
            android:background="@drawable/me_setting_row_selector"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_margin_left"
                    android:text="@string/activity_friend_detail_2"
                    android:textSize="@dimen/text_size_px_30" />

                <ImageView
                    android:id="@+id/iv_friend_detail_setting_2"
                    android:layout_width="120px"
                    android:layout_height="54px"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/image_margin_right"
                    android:src="@drawable/switch_rectangle_close" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_friend_detail_set_remark"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_row_height"
            android:layout_marginTop="2px"
            android:background="@drawable/me_setting_row_selector"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_margin_left"
                    android:text="@string/activity_friend_detail_3"
                    android:textSize="@dimen/text_size_px_30" />

                <ImageView
                    android:id="@+id/iv_friend_detail_setting_3"
                    android:layout_width="120px"
                    android:layout_height="54px"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/image_margin_right"
                    android:src="@drawable/switch_rectangle_close" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_friend_detail_delete_contact"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_row_height"
            android:layout_marginTop="20px"
            android:background="@drawable/me_setting_row_selector"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:text="@string/activity_friend_detail_4"
                android:textSize="@dimen/text_size_px_30" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_friend_detail_whistle_blowing"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_row_height"
            android:layout_marginTop="20px"
            android:background="@drawable/me_setting_row_selector"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:text="@string/activity_friend_detail_5"
                android:textSize="@dimen/text_size_px_30" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>