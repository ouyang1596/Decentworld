<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:text="大   腕"
            android:textColor="@color/new_yellow_90"
            android:textSize="@dimen/new_textsize_40sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" >

            <EditText
                android:id="@+id/et_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_et_yellow_selector"
                android:drawablePadding="10dp"
                android:hint="手机号"
                android:inputType="number"
                android:padding="10dp"
                android:textColor="@color/new_white"
                android:textSize="@dimen/new_textsize_14sp" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_et_yellow_selector"
                android:drawablePadding="10dp"
                android:hint="请输入你的密码"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/new_white"
                android:textSize="@dimen/new_textsize_14sp" />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_btn_yellow_selector"
                android:text="登录"
                android:textColor="@color/one_black"
                android:textSize="@dimen/new_textsize_18sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" >

                <TextView
                    android:id="@+id/tv_or"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:text="or"
                    android:textColor="@color/white"
                    android:textSize="@dimen/new_textsize_16sp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@+id/tv_or" >

                    <ImageView
                        android:id="@+id/iv_forget_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_login_right_selector" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="忘记密码"
                        android:textColor="@color/white"
                        android:textSize="@dimen/new_textsize_16sp" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_toLeftOf="@+id/tv_or" >

                    <ImageView
                        android:id="@+id/iv_register"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_login_left_selector" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="注册"
                        android:textColor="@color/white"
                        android:textSize="@dimen/new_textsize_16sp" />
                </FrameLayout>
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="注册即代表同意《软件许可及服务协议》"
            android:textColor="@color/white"
            android:textSize="@dimen/new_textsize_11sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:onClick="ceshi"
        android:src="@drawable/camera"
        android:visibility="gone" />

</LinearLayout>