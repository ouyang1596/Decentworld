<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_show_to_me_school"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/top_show_to_me_title" />

    <LinearLayout
        style="@style/select_ll"
        android:weightSum="1" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:gravity="center"
            android:text="学校"
            android:textColor="@color/one_black"
            android:textSize="@dimen/new_textsize_16sp" />

        <AutoCompleteTextView
            android:id="@+id/act_university"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:background="@drawable/bg_line_press"
            android:completionThreshold="1"
            android:dropDownVerticalOffset="1dp"
            android:gravity="center_horizontal"
            android:hint="学校全称"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/rg_gray"
            android:textSize="@dimen/new_textsize_14sp" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/one_black"
            android:textSize="@dimen/new_textsize_16sp" />
    </LinearLayout>

</LinearLayout>