<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 朋友圈展示页面的头部 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
        <ImageView 
            android:id="@+id/iv_header_moment_bg"
            android:layout_width="match_parent"
            android:src="@drawable/activity_work_header_bg"
            android:scaleType="fitXY"
            android:layout_height="wrap_content"/>

        <cn.sx.decentworld.widget.CircularImage
            android:id="@+id/iv_header_moment_icon"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32.5dp"
            android:src="@drawable/chat_room_avatar_bg" />

        <TextView
            android:id="@+id/tv_header_moment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_header_moment_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13.5dp"
            android:layout_marginBottom="32.5dp"
            android:text="我是谁" />
    </RelativeLayout>

</LinearLayout>