<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_edit_user_info_item_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_edit_user_info_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_edit_user_info_item_title_child"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/gray_e"
            android:orientation="horizontal"
            android:paddingBottom="4dp"
            android:paddingTop="4dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:src="@drawable/base_type" />

            <TextView
                android:id="@+id/tv_edit_user_info_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="基本信息"
                android:textColor="@color/user_detail_2"
                android:textSize="@dimen/new_textsize_15sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_edit_user_info_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_e"
            android:paddingBottom="6dp"
            android:paddingTop="6dp" >

            <ImageView
                android:id="@+id/iv_edit_user_info_item_switch"
                android:layout_width="60dp"
                android:layout_height="27dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/switch_rectangle_close" />

            <TextView
                android:id="@+id/tv_edit_user_info_item_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/iv_edit_user_info_item_switch"
                android:ems="5"
                android:text="@string/user_detail_info_realName"
                android:textColor="@color/user_detail_2"
                android:textSize="@dimen/new_textsize_15sp" />

            <ImageView
                android:id="@+id/iv_edit_user_info_item_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/user_detail_margin_right2"
                android:src="@drawable/more"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_edit_user_info_item_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:layout_toLeftOf="@id/iv_edit_user_info_item_more"
                android:layout_toRightOf="@id/tv_edit_user_info_item_key"
                android:singleLine="true"
                android:text="@string/user_detail_info_simu_realName"
                android:textColor="@color/user_detail_3"
                android:textSize="@dimen/new_textsize_15sp" />

            <TextView
                android:id="@+id/tv_edit_user_info_item_value1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/user_detail_margin_bottom"
                android:layout_marginLeft="@dimen/user_detail_margin_left2"
                android:layout_marginRight="@dimen/user_detail_margin_right3"
                android:layout_marginTop="@dimen/user_detail_margin_top"
                android:gravity="center"
                android:maxLines="2"
                android:singleLine="true"
                android:text="Jackchen"
                android:textColor="@color/user_detail_3"
                android:textSize="@dimen/new_textsize_15sp"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>