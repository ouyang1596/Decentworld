<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_work_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tag_worth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身价"
                android:textColor="@color/new_yellow"
                android:textSize="@dimen/new_textsize_12sp" />

            <TextView
                android:id="@+id/tv_per_worth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/new_yellow"
                android:textSize="@dimen/new_textsize_40sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身家"
                android:textColor="@color/three_black"
                android:textSize="@dimen/new_textsize_12sp" />

            <TextView
                android:id="@+id/tv_per_wealth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:text="25"
                android:textColor="@color/three_black"
                android:textSize="@dimen/new_textsize_12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_talk_stranger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_per_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/stranger_name_bg"
                android:gravity="center"
                android:text="name"
                android:textColor="@color/two_black"
                android:textSize="@dimen/new_textsize_20sp" />

            <ImageView
                android:id="@+id/iv_realname_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="4dp"
                android:src="@drawable/stranger_real" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_per_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男"
                android:textColor="@color/three_black"
                android:textSize="@dimen/new_textsize_12sp" />

            <TextView
                android:id="@+id/tv_per_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="24"
                android:textColor="@color/three_black"
                android:textSize="@dimen/new_textsize_12sp" />

            <TextView
                android:id="@+id/tv_per_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="12.5km"
                android:textColor="@color/three_black"
                android:textSize="@dimen/new_textsize_12sp" />

            <TextView
                android:id="@+id/tv_per_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="开发"
                android:textColor="@color/three_black"
                android:textSize="@dimen/new_textsize_12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_per_short_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="哈哈哈"
            android:textColor="@color/three_black"
            android:textSize="@dimen/new_textsize_14sp" />

        <TextView
            android:id="@+id/tv_per_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="滴滴答答"
            android:textColor="@color/three_black"
            android:textSize="@dimen/new_textsize_14sp" />
    </LinearLayout>

</RelativeLayout>