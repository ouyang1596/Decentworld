<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_detail_info_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tv_achievement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="100dp"
        android:paddingTop="50dp"
        android:text="还没有添加，赶快开始吧"
        android:textColor="@color/two_black"
        android:textSize="@dimen/new_textsize_16sp" />

    <ImageView
        android:id="@+id/iv_edit_achievement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:src="@drawable/hollow_heart" />

</RelativeLayout>