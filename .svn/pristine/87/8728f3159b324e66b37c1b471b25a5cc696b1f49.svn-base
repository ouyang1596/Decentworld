<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="返回"
            android:textColor="@color/two_black"
            android:textSize="@dimen/new_textsize_14sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成就"
            android:textColor="@color/three_black"
            android:textSize="@dimen/new_textsize_16sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_ensure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="确定"
            android:textColor="@color/two_black"
            android:textSize="@dimen/new_textsize_14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/stroke_bg_et"
        android:orientation="vertical"
        android:padding="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一句话概括*"
            android:textColor="@color/three_black"
            android:textSize="@dimen/new_textsize_14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_margin="10dp"
            android:background="@color/gray" />

        <EditText
            android:id="@+id/et_short_introduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入一句话简介"
            android:textColor="@color/three_black"
            android:textSize="@dimen/new_textsize_14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="60字"
            android:textColor="@color/three_black"
            android:textSize="@dimen/new_textsize_14sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="参考别人怎么写"
        android:textColor="@color/three_black"
        android:textSize="@dimen/new_textsize_12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/stroke_bg_et"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >

        <TextView
            android:id="@+id/tv_wan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="大腕"
            android:textColor="@color/three_black"
            android:textSize="@dimen/new_textsize_14sp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/tv_career_success"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="事业爆发期"
            android:textColor="@color/three_black"
            android:textSize="@dimen/new_textsize_14sp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/tv_career_isto_success"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="事业上升期"
            android:textColor="@color/three_black"
            android:textSize="@dimen/new_textsize_14sp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/tv_career_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="还是小咖"
            android:textColor="@color/three_black"
            android:textSize="@dimen/new_textsize_14sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="详细介绍*"
        android:textColor="@color/three_black"
        android:textSize="@dimen/new_textsize_14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_margin="10dp"
        android:background="@color/gray" />

    <EditText
        android:id="@+id/et_introduce_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="软枝黄蝉软枝黄蝉软枝黄蝉软枝黄蝉软枝黄蝉软枝黄蝉软枝黄蝉软枝黄蝉软枝黄蝉软枝黄蝉软枝黄蝉软枝黄蝉软枝黄蝉"
        android:textColor="@color/three_black"
        android:textSize="@dimen/new_textsize_14sp" />

</LinearLayout>