<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="32dp"
            android:text="确认提取"
            android:textSize="@dimen/text_size_20" />

        <TextView
            android:id="@+id/tv_cash_draw_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="28dp"
            android:text="10.00"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_60" />

        <TextView
            android:id="@+id/tv_cash_draw_account_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="支付宝账户"
            android:textColor="#9B9B9B"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/tv_cash_draw_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="138****2776"
            android:textColor="#9B9B9B"
            android:textSize="@dimen/text_size_18" />
        
        <EditText
            android:id="@+id/et_cash_draw_password"
            android:layout_width="240dp"
            android:layout_height="43dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/edittext_selector"
            android:hint="请输入密码"
            android:paddingLeft="5dp"
            android:inputType="numberPassword" />

        <Button
            android:id="@+id/btn_cash_draw_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_income"
            android:text="确认"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>