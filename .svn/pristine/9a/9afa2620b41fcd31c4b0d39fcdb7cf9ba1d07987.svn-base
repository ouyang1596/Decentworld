<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/rb_title_bg" >

        <LinearLayout
            android:id="@+id/ll_band_alipay_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rb_back" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="支付宝收钱"
            android:textSize="24sp" />
    </RelativeLayout>
    
    <TextView 
        android:id="@+id/tv_bind_account_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textSize="@dimen/text_size_20"
        android:padding="3dp"
        android:text="确定选择支付宝收钱后，当你有新的收益时，需要手动提现，申请提现后2个工作日内即可到账；"/>

    <EditText
        android:id="@+id/et_bind_account_alipay"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:hint="请输入支付宝账号" />

    <Button
        android:id="@+id/btn_bind_account_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="确定" />

</LinearLayout>