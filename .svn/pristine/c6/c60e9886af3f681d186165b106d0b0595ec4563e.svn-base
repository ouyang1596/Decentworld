<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/benefit_rb"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/sl_gr_benefit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false"
        android:scrollbars="@null" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp" >

                <cn.sx.decentworld.widget.CircularImage
                    android:id="@+id/iv_gr_icon"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/gr_add"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_gr_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="53dp"
                    android:layout_marginTop="52dp"
                    android:background="@drawable/rb_btn_bg_close"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="去除"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_gr_modify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="53dp"
                    android:layout_marginTop="52dp"
                    android:background="@drawable/rb_btn_bg_close"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="换人"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="我的贵人"
                android:textColor="@color/two_black"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_gr_rule_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="26dp"
                    android:src="@drawable/rb_progress_1" />

                <TextView
                    android:id="@+id/tv_gr_rule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/iv_gr_rule_tag"
                    android:text="删除或换掉往日贵人，一定是迫不得已，不过要花费500大洋哦;"
                    android:textColor="@color/two_black"
                    android:textSize="12sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/rb_under_line" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="我是谁的贵人"
                android:textColor="@color/two_black"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_gr_rule_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="26dp"
                    android:src="@drawable/rb_progress_1" />

                <TextView
                    android:id="@+id/tv_gr_rule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/iv_gr_rule_tag"
                    android:text="查看他对您的贡献明细，需要花费300大洋;"
                    android:textColor="@color/two_black"
                    android:textSize="12sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总收益 "
                    android:textColor="@color/two_black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_gr_all_benefit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textColor="@color/two_black"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 大洋"
                    android:textColor="@color/two_black"
                    android:textSize="15sp" />
            </LinearLayout>

            <cn.sx.decentworld.widget.ListViewForScrollView
                android:id="@+id/lv_gr_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:visibility="gone" >
            </cn.sx.decentworld.widget.ListViewForScrollView>

            <LinearLayout
                android:id="@+id/ll_gr_remind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:visibility="visible" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="你当前不是别人的贵人!"
                    android:textColor="@color/two_black"
                    android:textSize="24sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>