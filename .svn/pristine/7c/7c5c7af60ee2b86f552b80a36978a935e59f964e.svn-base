<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_work_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/tag_worth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="身价"
            android:textColor="@color/new_yellow"
            android:textSize="@dimen/new_textsize_9sp" />

        <TextView
            android:id="@+id/tv_per_worth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tag_worth"
            android:layout_toLeftOf="@+id/tag_worth"
            android:text="24"
            android:textColor="@color/new_yellow"
            android:textSize="@dimen/new_textsize_35sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_talk_stranger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/talk_shape" />

            <TextView
                android:id="@+id/tv_per_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="欧阳"
                android:textColor="@color/two_black"
                android:textSize="@dimen/new_textsize_24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_per_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男"
                android:textColor="@color/three_black"
                android:textSize="@dimen/new_textsize_12sp" />

            <TextView
                android:id="@+id/tv_per_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="24"
                android:textColor="@color/three_black"
                android:textSize="@dimen/new_textsize_12sp" />

            <TextView
                android:id="@+id/tv_per_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="2km"
                android:textColor="@color/three_black"
                android:textSize="@dimen/new_textsize_12sp" />

            <TextView
                android:id="@+id/tv_per_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text=""
                android:textColor="@color/three_black"
                android:textSize="@dimen/new_textsize_12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_per_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text=""
            android:textColor="@color/three_black"
            android:textSize="@dimen/new_textsize_14sp" />
    </LinearLayout>

</RelativeLayout>