<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9b9b9b" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp" >

        <TextView
            android:id="@+id/tv_moment_comment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="名字"
            android:textColor="@color/blue" />

        <TextView
            android:id="@+id/tv_moment_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/item_moment_margin_right"
            android:text=""
            android:textColor="@color/two_black" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_moment_comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="回复内容"
        android:textColor="@color/one_black" />

</LinearLayout>