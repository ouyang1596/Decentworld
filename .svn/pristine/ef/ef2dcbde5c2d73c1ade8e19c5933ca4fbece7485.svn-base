<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="@dimen/dig_width"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dig_margin_left_1"
            android:layout_marginRight="@dimen/dig_margin_right_1"
            android:layout_marginTop="@dimen/dig_margin_interval_1"
            android:text="请先设置收益密码"
            android:textColor="@color/black"
            android:textSize="@dimen/dig_title_size" />

        <EditText
            android:id="@+id/et_set_benefit_pwd"
            android:layout_width="240dp"
            android:layout_height="43dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dig_margin_left_1"
            android:layout_marginRight="@dimen/dig_margin_right_1"
            android:layout_marginTop="@dimen/dig_margin_interval_1"
            android:background="@drawable/bg_et_yellow_selector"
            android:hint="密码为6位数字"
            android:inputType="numberPassword"
            android:gravity="center"
            android:maxLength="6"
            android:paddingLeft="8dp"
            android:textColor="@color/three_black"
            android:textSize="@dimen/dig_edit_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dig_margin_left_1"
            android:layout_marginRight="@dimen/dig_margin_right_1"
            android:background="#000000" />

        <EditText
            android:id="@+id/et_set_benefit_pwd1"
            android:layout_width="240dp"
            android:layout_height="43dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dig_margin_left_1"
            android:layout_marginRight="@dimen/dig_margin_right_1"
            android:layout_marginTop="@dimen/dig_margin_interval_1"
            android:background="@drawable/bg_et_yellow_selector"
            android:hint="请确认密码"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:paddingLeft="8dp"
            android:gravity="center"
            android:textColor="@color/three_black"
            android:textSize="@dimen/dig_edit_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dig_margin_left_1"
            android:layout_marginRight="@dimen/dig_margin_right_1"
            android:background="#000000" />

        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dig_margin_interval_1"
            android:layout_marginTop="@dimen/dig_margin_interval_1"
            layout="@layout/btn_belong_dialog_submit" />
    </LinearLayout>

</LinearLayout>