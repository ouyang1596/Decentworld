<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_edit_user_info_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 顶部的title -->

    <include layout="@layout/top_title" />

    <EditText
        android:id="@+id/et_key_board"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <ScrollView
        android:id="@+id/sl_edit_user_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp" >

                <ImageView
                    android:id="@+id/iv_edit_user_info_icon_1"
                    android:layout_width="0dp"
                    android:layout_height="230dp"
                    android:layout_weight="0.67"
                    android:scaleType="fitXY"
                    android:src="@drawable/edit_user_detail_info_icon1" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="230dp"
                    android:layout_weight="0.03" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="230dp"
                    android:layout_weight="0.3"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/iv_edit_user_info_icon_2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.435"
                        android:scaleType="fitXY"
                        android:src="@drawable/edit_user_detail_info_icon1" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.13" />

                    <ImageView
                        android:id="@+id/iv_edit_user_info_icon_3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.435"
                        android:scaleType="fitXY"
                        android:src="@drawable/edit_user_detail_info_icon1" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/iv_edit_user_info_icon_4"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:src="@drawable/edit_user_detail_info_icon1" />

                <ImageView
                    android:id="@+id/iv_edit_user_info_icon_5"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:src="@drawable/edit_user_detail_info_icon1" />

                <ImageView
                    android:id="@+id/iv_edit_user_info_icon_6"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:src="@drawable/edit_user_detail_info_icon1" />
            </LinearLayout>

            <cn.sx.decentworld.widget.ListViewForScrollView
                android:id="@+id/lv_edit_user_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </cn.sx.decentworld.widget.ListViewForScrollView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>