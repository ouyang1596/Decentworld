<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:layout_gravity="center"
    android:background="@color/white" >

    <ImageView
        android:id="@+id/iv_newfriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:id="@+id/ll_new_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/iv_newfriend"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_new_friend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="三等分"
            android:textColor="#4a4a4a"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/tv_new_fiend_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sdfasdf"
            android:textColor="#9b9b9b"
            android:textSize="@dimen/text_size_15" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_had_added"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="19dp"
        android:text="@string/had_added"
        android:textSize="@dimen/text_size_15"
        android:visibility="invisible" />

    <Button
        android:id="@+id/bt_to_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="19dp"
        android:background="@drawable/bt_add_selector"
        android:text="@string/add"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_15"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_had_refused"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="19dp"
        android:text="@string/had_refused"
        android:textSize="@dimen/text_size_15"
        android:visibility="invisible" />

    <Button
        android:id="@+id/bt_to_refuse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="19dp"
        android:layout_toLeftOf="@id/bt_to_add"
        android:background="@drawable/bt_add_selector"
        android:text="@string/refuse"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_15"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_had_apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="19dp"
        android:text="@string/had_apply"
        android:textSize="@dimen/text_size_15"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_add_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="19dp"
        android:text="@string/add_success"
        android:textSize="@dimen/text_size_15"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_add_fail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="19dp"
        android:text="@string/add_fail"
        android:textSize="@dimen/text_size_15"
        android:visibility="invisible" />

</RelativeLayout>