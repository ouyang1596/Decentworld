<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_edit_user_info_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 顶部的title -->

    <include layout="@layout/top_title" />

    <ScrollView
        android:id="@+id/sl_edit_user_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp" >

                <ImageView
                    android:id="@+id/iv_edit_user_info_icon_1"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/edit_user_detail_info_icon1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/iv_edit_user_info_icon_1"
                    android:orientation="vertical"
                    android:weightSum="1" >

                    <ImageView
                        android:id="@+id/iv_edit_user_info_icon_2"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="0.45"
                        android:scaleType="fitXY"
                        android:src="@drawable/edit_user_detail_info_icon1" />

                    <ImageView
                        android:id="@+id/iv_edit_user_info_icon_3"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="0.45"
                        android:scaleType="fitXY"
                        android:src="@drawable/edit_user_detail_info_icon1" />
                </LinearLayout>
            </RelativeLayout>

            <cn.sx.decentworld.widget.ListViewForScrollView
                android:id="@+id/lv_edit_user_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </cn.sx.decentworld.widget.ListViewForScrollView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>