<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textColor="@color/two_black"
                android:textSize="@dimen/new_textsize_16sp" />

            <ImageView
                android:id="@+id/iv_owner_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/default_avatar" />

            <TextView
                android:id="@+id/tv_owner_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/two_black"
                android:textSize="@dimen/new_textsize_14sp" />

            <TextView
                android:id="@+id/tv_self_introduce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/two_black"
                android:textSize="@dimen/new_textsize_14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:enabled="false"
                    android:text=""
                    android:textColor="@color/two_black"
                    android:textSize="@dimen/new_textsize_14sp" />

                <Button
                    android:id="@+id/btn_chatroom_enter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/tv_content"
                    android:background="@drawable/stroke_bg_et"
                    android:padding="10dp"
                    android:text="进入聊天室"
                    android:textColor="@color/one_black"
                    android:textSize="@dimen/new_textsize_16sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>