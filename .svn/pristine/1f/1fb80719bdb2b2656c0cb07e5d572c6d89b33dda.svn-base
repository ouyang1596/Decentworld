<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rel_ceshi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/red" >

        <cn.sx.decentworld.widget.AutoSizeImageView
            android:id="@+id/iv_contact_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/login_bg" />

        <ImageView
            android:id="@+id/iv_doubt"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/doubt" />

        <ImageView
            android:id="@+id/iv_contact_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:src="@drawable/iv_add_selector" />
    </RelativeLayout>

</LinearLayout>