<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#d8ffffff" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/iv_heart"
        android:orientation="horizontal" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="9dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="10dp" >

            <!-- cn.sx.decentworld.widget.CircularImageView -->

            <cn.sx.decentworld.widget.CircularImageView
                android:id="@+id/iv_stranger_detail"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/default_friend_pic" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:paddingBottom="9dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我朋友的名字"
                    android:textColor="@color/one_black"
                    android:textSize="@dimen/new_textsize_16sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_worth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:textColor="@color/new_yellow"
                        android:textSize="@dimen/new_textsize_14sp" />

                    <TextView
                        android:id="@+id/tv_wealth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:textColor="@color/three_black"
                        android:textSize="@dimen/new_textsize_11sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_sex_girl_boy"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/stranger_boy" />

                    <TextView
                        android:id="@+id/tv_age_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="25"
                        android:textColor="@color/three_black"
                        android:textSize="@dimen/new_textsize_12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/me_location"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="25"
                        android:textColor="@color/three_black"
                        android:textSize="@dimen/new_textsize_12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_tag_occupation_shortIntroduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="行业/学校："
                    android:textColor="@color/three_black"
                    android:textSize="@dimen/new_textsize_12sp" />

                <TextView
                    android:id="@+id/tv_occupation_shortIntroduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="2"
                    android:text="IT/互联网"
                    android:textColor="@color/three_black"
                    android:textSize="@dimen/new_textsize_12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_heart"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/iv_new_heart_like_" />

    <ImageView
        android:id="@+id/iv_usertype"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/iv_heart"
        android:layout_alignRight="@+id/iv_heart"
        android:layout_below="@+id/iv_heart"
        android:layout_marginTop="10dp"
        android:src="@drawable/stranger_doubt" />

</RelativeLayout>