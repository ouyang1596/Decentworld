<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="@dimen/dig_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_set_alipay_account_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text="请先确认支付宝账户"
            android:textColor="@color/one_black"
            android:textSize="@dimen/dig_title_size" />

        <EditText
            android:id="@+id/et_set_alipay_account"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dig_margin_left_1"
            android:layout_marginRight="@dimen/dig_margin_right_1"
            android:layout_marginTop="@dimen/dig_margin_interval_1"
            android:background="@drawable/edittext_selector"
            android:hint="请输入支付宝账号"
            android:paddingLeft="10dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/dig_edit_size" />

        <TextView
            android:id="@+id/tv_set_alipay_account_remind_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dig_margin_left_2"
            android:layout_marginRight="@dimen/dig_margin_right_2"
            android:layout_marginTop="@dimen/dig_margin_interval_1"
            android:text="注：确认支付宝账户收钱后，自动返现将不可用,需要手动返现。"
            android:textColor="@color/three_black"
            android:textSize="@dimen/dig_info_size" />

        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dig_margin_interval_1"
            android:layout_marginTop="@dimen/dig_margin_interval_2"
            android:layout_gravity="center_horizontal"
            layout="@layout/btn_belong_dialog_submit" />
    </LinearLayout>

</LinearLayout>