<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/main_header" />
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    >
    <ScrollView
        android:id="@+id/activity_interesting_group_item_info_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:layout_alignParentTop="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="408px" >

                <ImageView
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_launcher" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30px"
                android:background="@color/chat_find_background" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="108px"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@color/white"
                 >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30px"
                    android:layout_weight="0.3"
                    android:text="@string/name_interesting_group"
                    android:textSize="30px" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.449"
                    android:text="ID:123123"
                    android:textSize="30px" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2556" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:text="未命名"
                        android:textSize="30px" 
                        android:textColor="@color/darkgrey" 
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="40px"
                        android:src="@drawable/show_more" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:background="#E6E6E6" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="108px" 
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="30px"
                    android:text="@string/manager_interesting_group"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/tv_manager_inter_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="174px"
                    android:text="组长"
                    android:textSize="30px" 
                    android:textColor="@color/darkgrey" 
                    />

                <ImageView
                    android:id="@+id/iv_manager_inter_group"
                    android:layout_width="82px"
                    android:layout_height="82px"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="72px"
                    android:src="@drawable/ic_launcher" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="40px"
                    android:src="@drawable/show_more" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:background="#E6E6E6" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="108px"
                android:background="@color/white" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="30px"
                    android:text="@string/date_interesting_group"
                    android:textSize="30px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="72px"
                    android:text="2015.4.4"
                    android:textSize="30px" 
                    android:textColor="@color/darkgrey" 
                    />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:background="#E6E6E6" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="108px"
                android:background="@color/white" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="30px"
                    android:text="@string/place_interesting_group"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/tv_place_inter_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="72px"
                    android:text="前海SPA"
                    android:textSize="30px"
                    android:textColor="@color/darkgrey" 
                     />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="40px"
                    android:src="@drawable/show_more" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:background="#E6E6E6" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:gravity="center_vertical"
                    android:text="@string/detail_interesting_group"
                    android:textSize="30px" />

                <TextView
                    android:layout_width="390px"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="72px"
                    android:textSize="30px"
                    android:text="1111111111111111111111111111111111111111111111111111111111111111111111111111111111111111"
                    android:textColor="@color/darkgrey"  />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="40px"
                    android:src="@drawable/show_more" />
                <!-- </RelativeLayout> -->
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:background="#E6E6E6" />

            <RelativeLayout
                android:id="@+id/rl_toshow_something"
                android:layout_width="match_parent"
                android:layout_height="108px"
                android:background="@color/white" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="30px"
                    android:text="@string/some_interesting_group"
                    android:textSize="30px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="40px"
                    android:src="@drawable/show_more" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:background="#E6E6E6" />

            <RelativeLayout
                
                android:id="@+id/rl_if_toshow_member"
                android:layout_width="match_parent"
                android:layout_height="108px"
                android:background="@color/white" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="30px"
                    android:text="@string/members_interesting_group"
                    android:textSize="30px" />

                <ImageView
                    android:id="@+id/iv_if_toshow_member"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="40px"
                    android:src="@drawable/fragment_chat_contact_listitem_show" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:background="#E6E6E6" />

            <cn.sx.decentworld.widget.ExpandGridView
                android:id="@+id/gv_members_inter_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="start"
                android:horizontalSpacing="12px"
                android:listSelector="@android:color/transparent"
                android:numColumns="4"
                android:paddingLeft="34px"
                android:paddingTop="30px"
                android:verticalSpacing="20px" >
            </cn.sx.decentworld.widget.ExpandGridView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="132px"
                android:background="@color/white" >
            </LinearLayout>

            
        </LinearLayout>
    </ScrollView>
    <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_inter_group_bt"
                android:text="@string/join"
                android:textColor="@color/white"
                android:textSize="30px" 
                android:layout_alignParentBottom="true"
                />
    </RelativeLayout>

</LinearLayout>