<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/fragment_chat_contact_item_header"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:background="#E0E0E0"
        android:paddingLeft="5dip"
        android:gravity="center_vertical"
        android:text="A"
        android:textColor="#454545" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_lv_item_selector"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/fragment_chat_contact_item_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/fragment_chat_contact_item_newfriend" />

        <TextView
            android:id="@+id/fragment_chat_contact_item_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="新的朋友"
            android:textColor="#333333"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>