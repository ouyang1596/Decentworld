<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="720px"
    android:layout_height="593px"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/login_dialog_bg3"
    android:id="@+id/root_activity_login_input_identify_code_dialog"
     >

    <TextView
        android:id="@+id/tv_mobilephone"
        android:layout_width="360px"
        android:layout_height="60px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="222px"
        android:gravity="center"
        android:text="123123"
        android:textColor="@color/darkgray"
        android:textSize="@dimen/text_size_px_32" >
    </TextView>
	<LinearLayout 
	    android:id="@+id/ll_login_input_identify_2"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_centerHorizontal="true"
	    android:layout_below="@id/tv_mobilephone"
	    android:layout_marginTop="20px"
	    >
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="190px"
        android:layout_height="60px"
        android:layout_alignParentLeft="true"
        android:background="@drawable/login_et_bg" >

        <EditText
            android:id="@+id/et_pwd_forget_identify_code"
            android:layout_width="185px"
            android:layout_height="60px"
            android:layout_marginLeft="5px"
            android:background="@null"
            android:hint="@string/input_identify_code"
            android:singleLine="true"
            android:textSize="@dimen/text_size_px_28" />
    </LinearLayout>

    <Button
        android:id="@+id/count_time"
        android:layout_width="154px"
        android:layout_height="60px"
        android:layout_marginLeft="15px"
        android:background="@drawable/login_sure_bt"
        android:text="123"
        android:textColor="@color/white" 
        android:textSize="@dimen/text_size_px_24"
        />

    </LinearLayout>
    <Button
        android:id="@+id/bt_sure_of_identify_code"
        android:layout_width="189px"
        android:layout_height="52px"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ll_login_input_identify_2"
        android:layout_marginTop="20px"
        android:background="@drawable/login_sure_bt"
        android:clickable="true"
        android:text="@string/make_sure"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_px_30" />

    <RelativeLayout
        android:id="@+id/activity_login_input_identify_code_dialog_back"
        android:layout_width="60px"
        android:layout_height="60px"
		android:layout_marginLeft="25px"
		android:layout_marginTop="320px"
         >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/chat_room_set_nickname_bg" />
    </RelativeLayout>

    

</RelativeLayout>