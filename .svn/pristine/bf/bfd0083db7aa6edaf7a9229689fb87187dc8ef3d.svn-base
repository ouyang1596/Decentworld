<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_activity_register_set_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <include layout="@layout/top_register_title" />

    <cn.sx.decentworld.widget.ClearEditText
        android:id="@+id/et_realName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_line_press"
        android:gravity="center_horizontal"
        android:hint="您的实名  (可遮挡)"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textColor="@color/two_black"
        android:textColorHint="@color/three_black"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="@dimen/new_textsize_13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <cn.sx.decentworld.widget.ClearEditText
            android:id="@+id/cet_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_line_press"
            android:gravity="center"
            android:hint="您想找什么样的人 （可修改）"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/two_black"
            android:textColorHint="@color/three_black"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/new_textsize_13sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <cn.sx.decentworld.widget.ClearEditText
            android:id="@+id/etv_reset_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_line_press"
            android:gravity="center_horizontal"
            android:hint="设置密码"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/two_black"
            android:textColorHint="@color/three_black"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/new_textsize_13sp" />

        <ImageView
            android:id="@+id/iv_pwd_is_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/hide_password" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp" >

        <Button
            android:id="@+id/btn_OK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/bg_btn_yellow_selector"
            android:padding="10dp"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="@dimen/new_textsize_15sp" />
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="21dp"
        android:text="大腕可能会为您带来收入，请把密码设置得够复杂并记住，确保您的安全"
        android:textColor="@color/two_black"
        android:textSize="@dimen/new_textsize_14sp" />

</LinearLayout>