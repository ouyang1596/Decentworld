<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/iv_recom_benefit_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/default_avatar" />

        <TextView
            android:id="@+id/tv_recom_benefit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_recom_benefit_icon"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/iv_recom_benefit_icon"
            android:text="名字" />

        <TextView
            android:id="@+id/tv_recom_benefit_phoneNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_recom_benefit_name"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/tv_recom_benefit_name"
            android:text="电话号码" />

        <TextView
            android:id="@+id/tv_recom_benefit_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/tv_recom_benefit_name"
            android:layout_marginRight="30dp"
            android:text="明细"
            android:textColor="#00ff00" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_recom_benefit_name"
            android:layout_below="@id/tv_recom_benefit_name"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <ProgressBar
                android:id="@+id/pb_recom_benefit_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_recom_benefit_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10/100" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="50dp"
        android:background="@color/three_black" />

</LinearLayout>