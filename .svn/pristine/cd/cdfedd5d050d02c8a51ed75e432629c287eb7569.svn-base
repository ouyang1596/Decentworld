<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <cn.sx.decentworld.widget.ScrollLayout
        android:id="@+id/near_stranger_scrollLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <!-- 附近的人以卡片显示 -->

        <include layout="@layout/fragment_near_card" />
        <!-- 附近的人以列表显示 -->

        <include layout="@layout/fragment_near_list" />
    </cn.sx.decentworld.widget.ScrollLayout>

    <include layout="@layout/top_near_stranger_title" />

</FrameLayout>