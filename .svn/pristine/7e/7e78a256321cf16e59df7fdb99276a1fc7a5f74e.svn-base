<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_activity_add_theme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <include layout="@layout/layout_register_title_bg2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="82px"
            android:layout_marginRight="82px"
            android:text="添加主题"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_30px" />

        <TextView
            android:id="@+id/tv_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="42px"
            android:padding="20px"
            android:text="发送"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_28px" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_audio_cover"
            android:layout_width="match_parent"
            android:layout_height="220px"
            android:layout_margin="20px"
            android:background="@drawable/stroke_bg_et" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标题"
                android:textColor="@color/new_black_one"
                android:textSize="@dimen/textsize_30px" />

            <EditText
                android:id="@+id/et_subjectname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:background="@drawable/stroke_bg_et" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="15px"
        android:background="@color/gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ListView
            android:id="@+id/lv_add_new_theme"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15px" >
        </ListView>

        <Button
            android:id="@+id/btn_content_save"
            android:layout_width="180px"
            android:layout_height="90px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="28px"
            android:layout_marginRight="28px"
            android:background="@drawable/rg_btn_bg_selector"
            android:text="暂存"
            android:textColor="@drawable/rg_tv_color_selector"
            android:textSize="@dimen/textsize_30px" />
    </RelativeLayout>

</LinearLayout>