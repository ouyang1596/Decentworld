<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/main_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2679"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_modification_bank_card_one_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingBottom="5dp"
            android:paddingLeft="@dimen/text_margin_left"
            android:paddingTop="5dp" />

        <LinearLayout
            android:id="@+id/ll_modification_bank_card_one_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/me_setting_row_selector"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_modification_bank_card_one_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_margin_left"
                android:text="@string/activity_modification_phone_num_one_2"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:id="@+id/et_modification_phone_num_one_number"
                style="@style/style_edittext_bg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_margin_left"
                android:layout_weight="1"
                android:hint="请输入手机号码"
                android:inputType="number" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@drawable/divide_line_thin" />

        <LinearLayout
            android:id="@+id/ll_modification_bank_card_one_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/me_setting_row_selector"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_modification_bank_card_one_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_margin_left"
                android:text="验证码"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:id="@+id/et_identifying_code"
                style="@style/style_edittext_bg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:hint="验证码" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7321"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20px"
            android:text="发送验证码"
            android:textColor="@color/red" />

        <Button
            android:id="@+id/btn_modification_phone_num_one_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="29dp"
            android:background="@drawable/activity_modification_bank_card_one_bt_bg_default"
            android:text="下一步" />
    </LinearLayout>

</LinearLayout>