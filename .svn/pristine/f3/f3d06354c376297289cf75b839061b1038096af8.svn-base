<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="236px"
    android:background="@drawable/item_chatroom_bg"
    android:orientation="horizontal"
    android:paddingLeft="20px"
    android:paddingTop="20px" >

    <ImageView
        android:id="@+id/iv_item_chatroom_background"
        android:layout_width="262px"
        android:layout_height="188px"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/item_chatroom_image" />

    <RelativeLayout
        android:id="@+id/item_chatroom_2_rl"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="20px"
        android:layout_toRightOf="@id/iv_item_chatroom_background"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_item_chatroom_description"
            android:layout_width="310px"
            android:layout_height="45px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="据悉，陈小春与妻子应采儿在2010年注册结婚，在2013年7月1日喜获爱子。如今Jasper已经两岁了，网友也纷纷大呼陈小春带儿子上亲子节目。"
            android:textColor="@color/contact_choice_default"
            android:textSize="20px" />

        <TextView
            android:id="@+id/tv_item_chatroom_name"
            android:layout_width="262px"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="陈小春儿子大哥范网友：期待“小山鸡”早日上亲子节目"
            android:textColor="@color/item_first_chatroom_title"
            android:textSize="30px"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="20px"
            android:paddingBottom="20px" 
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="在线人数:"
                android:textColor="@color/contact_choice_default"
                android:textSize="20px" />

            <TextView
                android:id="@+id/tv_item_chatroom_online_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:textColor="@color/contact_choice_default"
                android:textSize="20px" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_item_chatroom_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5px"
            android:src="@drawable/chatroom_icon_tojoin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="14px"
            android:text="@string/click_tojoin"
            android:textColor="@color/white"
            android:textSize="26px" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_chatroom_2_rl" >
    </RelativeLayout>

</RelativeLayout>