<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_pick_contact_catalog"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:layout_weight="1.0"
        android:background="#E0E0E0"
        android:gravity="center_vertical"
        android:paddingLeft="5dip"
        android:text="A"
        android:textColor="#454545"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/ll_pick_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_lv_item_selector">

        <ImageView
            android:id="@+id/iv_pick_contact_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/fragment_chat_contact_item1" />

        <TextView
            android:id="@+id/tv_pick_contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_pick_contact_icon"
            android:layout_marginLeft="10dp"
            android:text="杨幂"
            android:textColor="#333333"
            android:textSize="15sp" />
        
        <CheckBox 
            android:id="@+id/cb_pick_contact_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:clickable="false"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>

</LinearLayout>