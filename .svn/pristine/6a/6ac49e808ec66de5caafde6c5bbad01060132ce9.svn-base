<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="720px"
    android:layout_height="593px"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/login_dialog_bg4"
    android:id="@+id/root_activity_forget_pwd_dialog" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="360px"
        android:layout_height="60px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="252px"
        android:gravity="center"
        android:text="@string/forget_pwd"
        android:textColor="@color/red"
        android:textSize="@dimen/text_size_px_28" >
    </TextView>

    <LinearLayout
        android:layout_width="360px"
        android:layout_height="60px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="336px"
        android:background="@drawable/login_et_bg" >

        <EditText
            android:id="@+id/et_the_phone_number"
            android:layout_width="350px"
            android:layout_height="60px"
            android:layout_marginLeft="10px"
            android:background="@null"
            android:gravity="center"
            android:hint="@string/forget_pwd_info"
            android:maxLength="11"
            android:singleLine="true"
            android:textSize="@dimen/text_size_px_28" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_sure"
        android:layout_width="228px"
        android:layout_height="52px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="438px"
        android:background="@drawable/login_sure_bt"
        android:clickable="true"
        android:text="@string/make_sure"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_px_28" />

    <RelativeLayout
        android:id="@+id/activity_forget_pwd_dialog_dismiss"
        android:layout_width="60px"
        android:layout_height="54px"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
         >
        <ImageView 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/chat_room_set_nickname_bg"
            />
    </RelativeLayout>
<RelativeLayout
    android:id="@+id/activity_forget_pwd_dialog_back"
        android:layout_width="60px"
        android:layout_height="54px"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
         >
        <ImageView 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/chat_room_set_nickname_bg"
            />
    </RelativeLayout>
</RelativeLayout>