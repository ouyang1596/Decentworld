<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/login_dialog_bg"
    android:layout_gravity="center_horizontal"
    android:id="@+id/root_activity_login_dialog"
     >
    <LinearLayout 
        android:layout_width="360px"
        android:layout_height="60px"
        android:layout_marginTop="250px"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_et_bg"
        >
        <EditText 
            android:id="@+id/et_username"
            android:layout_width="350px"
            android:layout_height="60px"
            android:layout_marginLeft="10px"
            android:background="@null"
            android:hint="@string/to_login_info"
            android:textSize="@dimen/text_size_px_28"
            android:gravity="center"
            android:text="18824582749"
            android:singleLine="true"
            />
    </LinearLayout>
<LinearLayout 
        android:layout_width="360px"
        android:layout_height="60px"
        android:layout_marginTop="343px"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_et_bg"
        >
        <EditText 
            android:id="@+id/et_password"
            android:layout_width="350px"
            android:layout_height="60px"
            android:layout_marginLeft="10px"
            android:background="@null"
            android:hint="@string/password"
            android:textSize="@dimen/text_size_px_28"
            android:gravity="center"
            android:password="true"
            android:text="12345678"
            android:singleLine="true"
            />
    </LinearLayout>
    <Button 
        android:id="@+id/bt_login"
        android:background="@drawable/login_sure_bt"
        android:layout_centerHorizontal="true"
        android:layout_width="228px"
        android:layout_height="52px"
        android:layout_marginTop="435px"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_px_28"
        android:clickable="true"
        />
</RelativeLayout>
