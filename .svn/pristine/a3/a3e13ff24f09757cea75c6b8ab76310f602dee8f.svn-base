<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app1="http://schemas.android.com/apk/res/cn.sx.decentworld"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/tv_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="点击刷新"
            android:textColor="@color/two_black"
            android:textSize="@dimen/new_textsize_16sp" />

        <cn.sx.decentworld.flingswipe.SwipeFlingAdapterView
            android:id="@+id/fragment_stranger_near_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app1:rotation_degrees="15.5" />
    </FrameLayout>

</LinearLayout>