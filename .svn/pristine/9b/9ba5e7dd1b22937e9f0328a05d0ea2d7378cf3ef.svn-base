<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="@dimen/dig_width"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_reminder_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dig_margin_interval_1"
            android:gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dig_margin_left_1"
            android:layout_marginRight="@dimen/dig_margin_right_1"
            android:maxLines="3"
            android:text="自定义信息"
            android:textColor="@color/black"
            android:textSize="@dimen/dig_title_size" />

        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dig_margin_interval_1"
            android:layout_marginTop="@dimen/dig_margin_interval_1"
            layout="@layout/btn_belong_dialog_submit" />
    </LinearLayout>

</LinearLayout>