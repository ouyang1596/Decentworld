    /**
     * 将消息发送出去
     * 
     * @param dwMessage
     * @param listMsg
     * @throws NotConnectedException
     */
    public void sendTextMessage(DWMessage dwMessage, long maxID) throws NotConnectedException
    {
        // 构造Message
        Message message = createXmppMessage(dwMessage.getTo());
        if (CommUtil.isNotBlank(dwMessage.getTxtMsgID()))
        {
            message.setPacketID(dwMessage.getTxtMsgID());
            dwMessage.setSendSuccess(DWMessage.SEND_STATUS_SENDING);
        }
        dwMessage.setTxtMsgID(message.getPacketID());
        dwMessage.setMid(maxID);
        XMPPConnection connection =  XmppHelper.getConnection();
        try
        {
            //添加token
            addToken(dwMessage);
            message.setBody(DWMessage.toJson(dwMessage));
            //
            LogUtils.i(TAG, "sendTextMessage...connection=" + connection.toString()+"\n"+",dwMessage="+dwMessage.toString());
            //将信息保存到Bmob
            TestConnEngine.getInstance().uploadLogWhenSendMsg("发送消息之前",dwMessage, connection);
            //直接用XMPPTCPConnection发送
            connection.sendPacket(message);
        }
        catch (NotConnectedException e)
        {
            TestConnEngine.getInstance().uploadLogWhenSendMsg("发送消息抛出异常",dwMessage, connection);
            // 没有连接，处理
            dwMessage.setSendSuccess(DWMessage.SEND_STATUS_FAILURE);
            throw new NotConnectedException();
        }
        finally
        {
            // 保存之前 去掉Token，防止信息泄露
            dwMessage.setToken("");
            dwMessage.save();
        }
    }

