        message.setSubject("chat");
        return message;
    }

    /**
     * 获得临时的mid
     * 
     * @return
     */
    public long getTempMid(List<DWMessage> listMsg)
    {
        long tempMid = 0;
        if (listMsg != null && listMsg.size() > 0)
        {
            for (int i = listMsg.size() - 1; i >= 0; i--)
            {
                if (listMsg.get(i).getMessageType() != DWMessage.NOTIFY)
                {
                    tempMid = listMsg.get(i).getMid();
                }
            }
        }
        LogUtils.i(TAG, "临时的mid=" + tempMid);
        return tempMid;
    }

