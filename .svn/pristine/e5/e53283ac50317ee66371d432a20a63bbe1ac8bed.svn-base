<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_activity_register_student_green_pass"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <include layout="@layout/top_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/tv_tag_worth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身价修改为"
            android:textColor="@color/one_black"
            android:textSize="@dimen/new_textsize_20sp" />

        <EditText
            android:id="@+id/et_money"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_yuan"
            android:layout_toRightOf="@+id/tv_tag_worth"
            android:background="@drawable/bg_line_press"
            android:inputType="number"
            android:paddingLeft="2dp"
            android:text="" />

        <TextView
            android:id="@+id/tv_yuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="¥"
            android:textColor="@color/one_black"
            android:textSize="@dimen/new_textsize_20sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_pay_method"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付方式"
            android:textColor="@color/one_black"
            android:textSize="@dimen/new_textsize_12sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/more" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="由于不鼓励频繁修改身价\r\n\r\n所以第一次修改身价免费\r\n\r\n之后每次按照修改后的身价扣费"
        android:textColor="@color/two_black"
        android:textSize="@dimen/new_textsize_14sp" />

    <Button
        android:id="@+id/btn_ensure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/stroke_bg_et"
        android:paddingBottom="6dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="6dp"
        android:text="确定"
        android:textColor="@color/one_black"
        android:textSize="@dimen/new_textsize_20sp" />

</LinearLayout>