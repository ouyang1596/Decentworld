<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/benefit_rb"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="@null" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="目前身价："
                    android:textColor="@color/two_black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_vc_worth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="0.00"
                    android:textColor="@color/two_black"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="目前身家："
                    android:textColor="@color/two_black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_vc_wealth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="0.00"
                    android:textColor="@color/two_black"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:layout_marginTop="10dp"
                android:background="@color/dark_gray" />

            <RelativeLayout
                android:id="@+id/rl_vc_draw"
                android:layout_width="143dp"
                android:layout_height="143dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:background="@drawable/rb_draw_cash" >

                <TextView
                    android:id="@+id/tv_cash_benefit_not_draw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="0.00"
                    android:textColor="@color/two_black"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/tv_cash_benefit_not_draw"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="12dp"
                    android:text="大洋"
                    android:textColor="@color/two_black"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_cash_benefit_not_draw"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:text="兑换"
                    android:textColor="@color/dark_gray"
                    android:textSize="11dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp" >

                <TextView
                    android:id="@+id/tv_vc_set_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="26dp"
                    android:background="@drawable/rb_btn_bg_close"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="设置提现密码"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_vc_band_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="26dp"
                    android:background="@drawable/rb_btn_bg_close"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="转账到哪里？"
                    android:textColor="@color/white"
                    android:textSize="12dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rb_under_line" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="兑现友好提示"
                android:textColor="@color/two_black"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:layout_marginTop="20dp"
                android:text="身家是消费积分，积分兑换成人民币比例为1比1， 100元起兑，每次兑换最大值为总额的百分之80。提交兑换申请后24小时内人民币将汇到你的银行账户（因银行对公不上班，故周六日除外）。"
                android:textColor="@color/two_black"
                android:textSize="12sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>