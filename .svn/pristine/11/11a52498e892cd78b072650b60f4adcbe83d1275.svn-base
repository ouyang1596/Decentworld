<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/top_edit_userinfo_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical" >

           <AutoCompleteTextView
        android:id="@+id/act_edit_school"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_line_press"
            android:gravity="center_horizontal"
            android:hint="请输入学校名称"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" />

        <Button
              android:id="@+id/btn_edit_school_complete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_btn_yellow_selector"
            android:padding="10dp"
            android:text="OK"
            android:textColor="@color/white"
            android:textSize="@dimen/new_textsize_15sp" />
    </LinearLayout>

</LinearLayout>
